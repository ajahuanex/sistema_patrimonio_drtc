# ============================================
# CONFIGURACIÓN DEL SISTEMA DE PATRIMONIO
# ============================================

# Base de Datos PostgreSQL
DB_NAME=patrimonio_db
DB_USER=postgres
DB_PASSWORD=tu_password_seguro_aqui
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:tu_password_seguro_aqui@db:5432/patrimonio_db

# Django
SECRET_KEY=tu_secret_key_muy_larga_y_segura_aqui
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email (Gmail ejemplo)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password_de_gmail

# URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Seguridad
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Archivos Media
MEDIA_ROOT=/app/media
MEDIA_URL=/media/

# Archivos Estáticos
STATIC_ROOT=/app/staticfiles
STATIC_URL=/static/

# Configuración de Papelera de Reciclaje
RECYCLE_BIN_RETENTION_DAYS=30
RECYCLE_BIN_AUTO_CLEANUP=True

# Configuración de Reportes
MAX_EXPORT_ROWS=10000
REPORT_CACHE_TIMEOUT=300

# Configuración de QR
QR_CODE_SIZE=300
QR_CODE_BORDER=4

# Timezone
TZ=America/Lima
USE_TZ=True

# Idioma
LANGUAGE_CODE=es-pe
TIME_ZONE=America/Lima

# Logging
LOG_LEVEL=INFO

# ============================================
# INSTRUCCIONES
# ============================================
# 1. Copia este archivo como .env
# 2. Reemplaza todos los valores "tu_*_aqui" con valores reales
# 3. NUNCA subas el archivo .env a GitHub
# 4. Genera un SECRET_KEY con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
