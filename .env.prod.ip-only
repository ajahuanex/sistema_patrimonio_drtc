# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN PARA IP 161.132.47.92 (SIN SSL)
# ============================================================================
# Este archivo está configurado para despliegue con IP pública sin dominio
# Copia este archivo como .env.prod en el servidor Ubuntu
# ============================================================================

# ============================================================================
# DJANGO SETTINGS
# ============================================================================
DEBUG=False
SECRET_KEY=CAMBIAR-ESTA-CLAVE-SECRETA-POR-UNA-GENERADA-ALEATORIAMENTE-MIN-50-CARACTERES
DJANGO_SETTINGS_MODULE=patrimonio.settings.production

# Hosts permitidos (IP del servidor)
ALLOWED_HOSTS=161.132.47.92,localhost

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
POSTGRES_DB=patrimonio_prod
POSTGRES_USER=patrimonio_user
POSTGRES_PASSWORD=CAMBIAR-PASSWORD-SEGURO-BASE-DATOS-MIN-20-CARACTERES

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=CAMBIAR-PASSWORD-SEGURO-REDIS-MIN-20-CARACTERES

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# Para Gmail: Usa una "Contraseña de aplicación" no tu contraseña normal
# Genera en: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=CAMBIAR-APP-PASSWORD-DE-GMAIL-16-CARACTERES
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Sistema Patrimonio DRTC <tu-email@gmail.com>

# ============================================================================
# APPLICATION URLS
# ============================================================================
# URL base con HTTP (sin HTTPS porque no hay dominio)
BASE_URL=http://161.132.47.92

# ============================================================================
# APPLICATION VERSION
# ============================================================================
APP_VERSION=1.0.0

# ============================================================================
# SECURITY SETTINGS (DESACTIVADO SSL - SOLO PARA IP SIN DOMINIO)
# ============================================================================
# IMPORTANTE: Estos valores están en False porque usamos IP sin SSL
# Si en el futuro obtienes un dominio, cambia estos valores a True
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ============================================================================
# RECYCLE BIN CONFIGURATION (PAPELERA DE RECICLAJE)
# ============================================================================
# Código requerido para eliminación permanente - CAMBIAR A ALGO SEGURO
PERMANENT_DELETE_CODE=CODIGO-SUPER-SEGURO-PARA-BORRADO-PERMANENTE-2024
RECYCLE_BIN_RETENTION_DAYS=30
RECYCLE_BIN_AUTO_CLEANUP_ENABLED=True
RECYCLE_BIN_MAX_BULK_SIZE=100
RECYCLE_BIN_LOCKOUT_ATTEMPTS=3
RECYCLE_BIN_LOCKOUT_MINUTES=30

# ============================================================================
# reCAPTCHA CONFIGURATION (OPCIONAL)
# ============================================================================
# Obtén tus claves en: https://www.google.com/recaptcha/admin
# Usa reCAPTCHA v2 "I'm not a robot" Checkbox
# Si no quieres usar reCAPTCHA, deja estos valores vacíos
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
# Celery Beat para tareas programadas (limpieza automática, etc.)
CELERY_BEAT_ENABLED=True

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Días de retención de backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# MONITORING (OPCIONAL)
# ============================================================================
# Sentry para monitoreo de errores (opcional)
# Obtén tu DSN en: https://sentry.io
SENTRY_DSN=

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================
# 1. CAMBIAR todos los valores que dicen "CAMBIAR-"
# 2. Generar SECRET_KEY seguro con:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 3. Usar contraseñas fuertes (mínimo 20 caracteres con letras, números y símbolos)
# 4. Para Gmail, usar "Contraseña de aplicación" no la contraseña normal
# 5. Guardar este archivo como .env.prod en el servidor
# 6. NO subir este archivo a GitHub (ya está en .gitignore)
# ============================================================================
